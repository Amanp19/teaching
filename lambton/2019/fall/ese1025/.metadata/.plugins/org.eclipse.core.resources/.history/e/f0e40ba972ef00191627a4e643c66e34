#include <stdio.h>
#include <stdlib.h>

int comp (const void *elem1, const void *elem2)
{
    int f = *((int*)elem1);
    int s = *((int*)elem2);
    if (f > s) return  1;
    if (f < s) return -1;
    return 0;
}

double average (int *s, unsigned int Ns)
{
	double avg;
	int sum = 0;

	unsigned int i;

	for (i=0; i! = Ns; ++i)
	{
		sum += s[i];
	}

	avg = (double) (sum/Ns);
	return avg;
}

