double average (int *s, unsigned int Ns)
{
	double avg;
	int sum = 0;

	unsigned int i;

	for (i=0; i! = Ns; ++i)
	{
		sum += s[i];
	}

	avg = (double) (sum/Ns);
	return avg;
}

